{
  "name": "pcchat",
  "version": "1.1.0",
  "description": "Anon peer to peer chat application using Hyperswarm",
  "main": "server.js",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*"
    ]
  },
  "scripts": {
    "start": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output ./build/pcchat.exe"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "hyperswarm": "^4.7.15"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "keywords": ["chat", "p2p", "hyperswarm", "anonymous"],
  "author": "Nix",
  "license": "GPL-3.0-only"
}